{#**************************************************************************************************************************************#}
{% extends 'base.html.twig' %}
{#**************************************************************************************************************************************#}

{% block title %}{% endblock %}

{% block body %}


	<hr>

	<a class="btn btn-dark" data-toggle="collapse" href="#choix" role="button">
		Ajouter une visualisation
	</a>
	<p>


		{#**************************************************************************************************************************************#}
		{# create new indicator #}
		{#**************************************************************************************************************************************#}
			<div class="collapse" id="choix"> {{ form_start(form) }}
			<div class="card card-body">
				<div class="form-row">
					<div class="col">

						<div class="row">
							<div class="col">

								{{ form_row(form.nom)}}
							</div>

							<div class="col">

								{{ form_row(form.evaluation)}}
							</div>
						</div>


						<div class="row">
							<div class="col">

								{{ form_row(form.timeBegin)}}
							</div>

							<div class="col">

								{{ form_row(form.timeEnd)}}
							</div>
						</div>
					</div>


				</div>
				<div align="right">

					<button type="submit" class="btn btn-primary">Ajouter</button>
				</div>

				{{ form_end(form) }}


				{#**************************************************************************************************************************************#}

			</p>
		</div>
	</p>
</div>

{#**************************************************************************************************************************************#}


<div
	class="card card-cascade narrower">


	{#**************************************************************************************************************************************#}

	<div class="px-4">
		<p>

			<div class="table-wrapper">

				<table class="table table-hover mb-0">

					<thead>
						<tr>
							<th class="">Nom</th>
							<th class="">Evaluation</th>
							<th class="">Voir</th>
							<th class="">Supprimer</th>

						</tr>
					</thead>

					<tbody>

						{% for ligne in result %}
							<tr>

								<td>{{ ligne.nom }}</td>
								<td>{{ ligne.hasEvaluation.nom }}</td>
								<td>
									<a href={{path('IView', {'type':'bar', 'page' : '1', 'id' : '' } )}} title="DÃ©tails">
										<i class="fas fa-eye"></i>
									</a>
								</td>

								<td>
									<a href={{path('IDelete', {'id':ligne.id } )}} onclick="return confirm('Voulez vous supprimer cet indicateur?')" title="Supprimer?">
										<i class="fas fa-trash"></i>
									</a>
								</td>


							</tr>

						{% endfor %}

					</tbody>

				</table>
			</div>
		</p>
		<p></p>
		<p></p>
	</div>

</div>

{#**************************************************************************************************************************************#}{% endblock %}
