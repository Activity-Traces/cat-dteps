{% extends 'Header.html.twig' %}


{% block body %}


	<div class="d-flex p-2  justify-content-center">
		<div class="col-3">
			<div class="p-3 border bg-light">
				<form action="{{ path('Login') }}" method="post">

					<div class="mb-3">
						<label for="exampleInputEmail1" class="form-label">Email</label>
						<input type="email" required name="_username" class="form-control" aria-describedby="emailHelp">
					</div>

					<div class="mb-3">
						<label for="exampleInputPassword1" class="form-label">Password</label>
						<input type="password" required name="_password" class="form-control">
					</div>

					<button type="submit" class="btn btn-primary">Connexion</button>
				</form>


				<div id="formFooter">
					<a href="{{ path('Registration') }}" class="link-primary">Vous n'avez pas encore un compte? Inscrivez vous!</a>
				</div>


			</div>
		</div>

	</div>


{% endblock %}
